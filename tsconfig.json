{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "traceResolution": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
//    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDirs": [
      "src",
      "stories"
    ],
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*"
    ]
  },
  "allowJs": true
}
